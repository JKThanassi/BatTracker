<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ecemoca.zhoub.a3dtracking.MainActivity">

    <TextView
        android:text="f0:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editTextF0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="f1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextF0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="T:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextF1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="18000"
        android:ems="10"
        android:layout_marginTop="39dp"
        android:id="@+id/editTextF0"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <TextView
        android:text="N:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDuration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="300"
        android:ems="10"
        android:layout_below="@+id/editTextDuration"
        android:layout_alignLeft="@+id/editTextDuration"
        android:layout_alignStart="@+id/editTextDuration"
        android:id="@+id/editTextN" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="10"
        android:ems="10"
        android:id="@+id/editTextDuration"
        android:layout_below="@+id/editTextF1"
        android:layout_alignLeft="@+id/editTextF1"
        android:layout_alignStart="@+id/editTextF1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="20000"
        android:ems="10"
        android:id="@+id/editTextF1"
        android:layout_below="@+id/editTextF0"
        android:layout_alignLeft="@+id/editTextF0"
        android:layout_alignStart="@+id/editTextF0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_address"
        android:text="10.6.0.235"
        android:ems="10"
        android:layout_below="@id/editTextN"
        android:layout_alignLeft="@id/editTextN"
        />

    <Button
        android:text="Emit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEmit"
        android:layout_below="@id/ip_address"
        android:layout_toRightOf="@id/textView3"
        android:layout_alignRight="@id/textView"
        android:layout_alignEnd="@id/textView" />

    <Button
        android:text="Chirp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonPlay"
        android:layout_alignLeft="@+id/buttonEmit"
        android:layout_alignStart="@+id/buttonEmit"
        android:id="@+id/buttonDuration" />

    <Button
        android:text="START"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/buttonPlay"
        android:background="@android:color/holo_green_light"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/buttonEmit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="game rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:id="@+id/textViewOri"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
